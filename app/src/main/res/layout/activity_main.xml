<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Campus_App.Logic.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="416dp"
        android:layout_height="733dp"
        tools:layout_editor_absoluteY="-3dp">

        <Button
            android:id="@+id/Chat_Button"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:text="CHAT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

        <Button
            android:id="@+id/Events_Button"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:text="Events"
            app:layout_constraintBottom_toTopOf="@+id/Chat_Button"
            app:layout_constraintEnd_toEndOf="@+id/Chat_Button"
            app:layout_constraintStart_toStartOf="@+id/Chat_Button" />

        <Button
            android:id="@+id/Search_Button"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:text="Search"
            app:layout_constraintBottom_toTopOf="@+id/Events_Button"
            app:layout_constraintEnd_toEndOf="@+id/Chat_Button"
            app:layout_constraintStart_toStartOf="@+id/Chat_Button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>